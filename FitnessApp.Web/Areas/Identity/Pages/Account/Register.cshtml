@page
@model RegisterModel
@{
    ViewData["Title"] = "Üye Ol";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow-lg rounded-3 overflow-hidden">
                <div class="card-header bg-success text-white text-center py-4">
                    <i class="bi bi-person-plus-fill display-4"></i>
                    <h3 class="mt-2 fw-bold">Aramıza Katıl</h3>
                    <p class="mb-0 opacity-75">Spor yolculuğuna bugün başla!</p>
                </div>

                <div class="card-body p-4 bg-light">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3 text-center"></div>

                        <div class="row g-2 mb-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Input.FirstName" class="form-control" placeholder="Adınız" />
                                    <label asp-for="Input.FirstName">Ad</label>
                                    <span asp-validation-for="Input.FirstName" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Input.LastName" class="form-control" placeholder="Soyadınız" />
                                    <label asp-for="Input.LastName">Soyad</label>
                                    <span asp-validation-for="Input.LastName" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" placeholder="name@example.com" />
                            <label asp-for="Input.Email">E-posta Adresi</label>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" placeholder="password" />
                            <label asp-for="Input.Password">Şifre</label>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="password" />
                            <label asp-for="Input.ConfirmPassword">Şifre Tekrar</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button id="registerSubmit" type="submit" class="btn btn-success btn-lg fw-bold shadow-sm hover-scale">
                                <i class="bi bi-check-circle me-2"></i> Kaydı Tamamla
                            </button>
                        </div>
                    </form>
                </div>

                <div class="card-footer bg-white text-center py-3">
                    <p class="mb-0 text-muted">Zaten hesabın var mı? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-success fw-bold text-decoration-none">Giriş Yap</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-scale {
        transition: transform 0.2s;
    }
    .hover-scale:hover {
        transform: scale(1.02);
    }
    .form-floating > .form-control:focus {
        border-color: #198754;
        box-shadow: 0 0 0 0.25rem rgba(25, 135, 84, 0.25);
    }
</style>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}