@model FitnessApp.Web.Models.Service

@{
    ViewData["Title"] = "Hizmet Detayı";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 overflow-hidden">
                <div class="row g-0">
                    <div class="col-md-5">
                        <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "https://placehold.co/600x800?text=Fitness" : Model.ImageUrl)" 
                             class="img-fluid h-100 w-100" 
                             style="object-fit: cover; min-height: 300px;" 
                             alt="@Model.Name">
                    </div>
                    
                    <div class="col-md-7">
                        <div class="card-body p-4 d-flex flex-column h-100">
                            <h2 class="card-title fw-bold text-primary mb-3">@Model.Name</h2>
                            
                            <div class="mb-3">
                                <span class="badge bg-info text-dark me-2"><i class="bi bi-clock"></i> @Model.DurationMinutes Dakika</span>
                                <span class="badge bg-success"><i class="bi bi-cash"></i> @Model.Price ₺</span>
                            </div>

                            <p class="card-text text-muted flex-grow-1">
                                @Model.Description
                            </p>

                            <div class="mt-auto">
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning w-100 mb-2 fw-bold">Düzenle</a>
                                }
                                <a asp-action="Index" class="btn btn-outline-primary w-100">Listeye Dön</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>