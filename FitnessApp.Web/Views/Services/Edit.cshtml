@model FitnessApp.Web.Models.Service

@{
    ViewData["Title"] = "Hizmeti Düzenle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-warning text-dark text-center py-3">
                    <h3 class="mb-0 fw-bold"><i class="bi bi-pencil-square"></i> Hizmeti Düzenle</h3>
                </div>
                <div class="card-body p-4 bg-light">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="text-center mb-4">
                            <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "https://placehold.co/600x400?text=No+Image" : Model.ImageUrl)" 
                                 class="img-thumbnail shadow-sm" 
                                 style="height: 150px; object-fit: cover;">
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Name" class="form-control" placeholder="Hizmet Adı" />
                            <label asp-for="Name">Hizmet Adı</label>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="row g-2 mb-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="DurationMinutes" class="form-control" placeholder="Süre" />
                                    <label asp-for="DurationMinutes">Süre (Dakika)</label>
                                    <span asp-validation-for="DurationMinutes" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Price" class="form-control" placeholder="Ücret" />
                                    <label asp-for="Price">Ücret (₺)</label>
                                    <span asp-validation-for="Price" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            <textarea asp-for="Description" class="form-control" style="height: 100px" placeholder="Açıklama"></textarea>
                            <label asp-for="Description">Açıklama</label>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Yeni Görsel Yükle (Opsiyonel)</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white"><i class="bi bi-image"></i></span>
                                <input type="file" name="imageFile" class="form-control" accept="image/*" />
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">İptal</a>
                            <button type="submit" class="btn btn-warning px-5 fw-bold text-dark">Güncelle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}