@model IEnumerable<FitnessApp.Web.Models.Service>

@{
    ViewData["Title"] = "Hizmetlerimiz";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4 text-primary">‚ú® Hizmetlerimiz</h1>
        <p class="lead text-muted">Size en uygun antrenman programƒ±nƒ± se√ßin.</p>
        
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-success mb-3">
                <i class="bi bi-plus-circle"></i> Yeni Hizmet Ekle
            </a>
        }
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm border-0 hover-shadow">
                    <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "https://placehold.co/600x400?text=Fitness+App" : item.ImageUrl)" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;">
                    
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold text-dark">@item.Name</h5>
                        
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="badge bg-info text-dark">‚è±Ô∏è @item.DurationMinutes dk</span>
                            <span class="badge bg-success fs-6">üí∞ @item.Price.ToString("C2")</span>
                        </div>
                        
                        <p class="card-text text-muted flex-grow-1">
                            @(string.IsNullOrEmpty(item.Description) ? "Bu hizmet i√ßin a√ßƒ±klama girilmedi." : item.Description)
                        </p>

                        <div class="d-grid gap-2 mt-3">
                            <a asp-controller="Appointments" asp-action="Index" class="btn btn-outline-primary">üìÖ Randevu Al</a>

                            @if (User.IsInRole("Admin"))
                            {
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">D√ºzenle</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Detay</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-5px);
        transition: all 0.3s ease;
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
    }
</style>