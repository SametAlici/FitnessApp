@model FitnessApp.Web.Models.Trainer

@{
    ViewData["Title"] = "Yeni Antrenör";
}

<h1>Yeni Antrenör Ekle</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Specialty" class="control-label"></label>
                <input asp-for="Specialty" class="form-control" />
                <span asp-validation-for="Specialty" class="text-danger"></span>
            </div>
            
            <div class="row mb-3">
                <div class="col">
                    <label asp-for="WorkStartHour" class="control-label"></label>
                    <input asp-for="WorkStartHour" class="form-control" type="number" min="0" max="23" />
                    <span asp-validation-for="WorkStartHour" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="WorkEndHour" class="control-label"></label>
                    <input asp-for="WorkEndHour" class="form-control" type="number" min="0" max="23" />
                    <span asp-validation-for="WorkEndHour" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PhotoUrl" class="control-label"></label>
                <input asp-for="PhotoUrl" class="form-control" />
                <span asp-validation-for="PhotoUrl" class="text-danger"></span>
            </div>

            <div class="form-group mb-3 border p-3 rounded">
                <label class="fw-bold mb-2">Verebildiği Hizmetler:</label>
                <div>
                    @if (ViewBag.Services != null)
                    {
                        foreach (var service in (List<FitnessApp.Web.Models.Service>)ViewBag.Services)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="selectedServices" value="@service.Id" id="service_@service.Id">
                                <label class="form-check-label" for="service_@service.Id">
                                    @service.Name
                                </label>
                            </div>
                        }
                    }
                </div>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}