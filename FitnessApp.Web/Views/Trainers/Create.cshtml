@model FitnessApp.Web.Models.Trainer

@{
    ViewData["Title"] = "Yeni Antrenör";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-3">
                
                <div class="card-header bg-success text-white py-3 d-flex align-items-center justify-content-center">
                    <i class="bi bi-person-plus-fill fs-3 me-2"></i>
                    <h3 class="mb-0 fw-bold">Yeni Antrenör Ekle</h3>
                </div>

                <div class="card-body p-4 bg-light">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="FullName" class="form-control" placeholder="Ad Soyad" />
                            <label asp-for="FullName">Ad Soyad (Örn: Ahmet Yılmaz)</label>
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Specialty" class="form-control" placeholder="Uzmanlık" />
                            <label asp-for="Specialty">Uzmanlık Alanı (Örn: Pilates Eğitmeni)</label>
                            <span asp-validation-for="Specialty" class="text-danger small"></span>
                        </div>

                        <div class="row g-2 mb-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="WorkStartHour" class="form-control" type="number" min="0" max="23" placeholder="Başlangıç" value="9" />
                                    <label asp-for="WorkStartHour">Mesai Başlangıç (0-23)</label>
                                    <span asp-validation-for="WorkStartHour" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="WorkEndHour" class="form-control" type="number" min="0" max="23" placeholder="Bitiş" value="18" />
                                    <label asp-for="WorkEndHour">Mesai Bitiş (0-23)</label>
                                    <span asp-validation-for="WorkEndHour" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold text-secondary">Profil Fotoğrafı Yükle</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white"><i class="bi bi-image"></i></span>
                                <input type="file" name="imageFile" class="form-control" accept="image/*" />
                            </div>
                            <div class="form-text">Bir fotoğraf seçmezseniz varsayılan ikon kullanılacaktır.</div>
                        </div>

                        <div class="card border-primary mb-4 shadow-sm">
                            <div class="card-header bg-primary text-white fw-bold">
                                <i class="bi bi-card-checklist me-2"></i> Verebildiği Hizmetleri Seçiniz
                            </div>
                            <div class="card-body bg-white">
                                <div class="row">
                                    @if (ViewBag.Services != null)
                                    {
                                        foreach (var service in (List<FitnessApp.Web.Models.Service>)ViewBag.Services)
                                        {
                                            <div class="col-md-6 mb-2">
                                                <div class="form-check form-switch">
                                                    <input class="form-check-input" type="checkbox" name="selectedServices" value="@service.Id" id="srv_@service.Id">
                                                    <label class="form-check-label" for="srv_@service.Id">
                                                        @service.Name
                                                    </label>
                                                </div>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <p class="text-danger mb-0">Sistemde henüz kayıtlı hizmet bulunmamaktadır.</p>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-pill">İptal</a>
                            <button type="submit" class="btn btn-success px-5 fw-bold rounded-pill shadow-sm">
                                <i class="bi bi-check-lg"></i> Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}