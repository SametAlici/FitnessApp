@model FitnessApp.Web.Models.Trainer

@{
    ViewData["Title"] = "Antrenörü Sil";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger shadow-sm d-flex align-items-center mb-4">
                    <i class="bi bi-exclamation-octagon-fill fs-3 me-3"></i>
                    <div>
                        <strong>Dikkat!</strong> @ViewBag.ErrorMessage
                    </div>
                </div>
            }

            <div class="card shadow-lg border-0 rounded-3 text-center">
                <div class="card-header bg-danger text-white py-3">
                    <h4 class="mb-0"><i class="bi bi-trash3-fill"></i> Antrenörü Sil</h4>
                    <p class="mb-0 small opacity-75">Bu işlem geri alınamaz.</p>
                </div>
                
                <div class="card-body p-4 bg-light">
                    <img src="@(string.IsNullOrEmpty(Model.PhotoUrl) ? "https://cdn-icons-png.flaticon.com/512/8815/8815112.png" : Model.PhotoUrl)" 
                         class="rounded-circle shadow-sm mb-3" 
                         style="width: 100px; height: 100px; object-fit: cover;">
                    
                    <h3 class="fw-bold">@Model.FullName</h3>
                    <p class="text-muted">@Model.Specialty</p>

                    <p class="text-danger fw-bold mt-4">Bu antrenörü silmek istediğinize emin misiniz?</p>

                    <form asp-action="Delete" class="mt-3">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2">
                            <input type="submit" value="Evet, Sil" class="btn btn-danger btn-lg fw-bold" />
                            <a asp-action="Index" class="btn btn-outline-secondary">Vazgeç</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>