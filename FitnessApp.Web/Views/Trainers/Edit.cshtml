@model FitnessApp.Web.Models.Trainer

@{
    ViewData["Title"] = "Antrenör Düzenle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-warning text-dark py-3 d-flex align-items-center justify-content-center">
                    <i class="bi bi-pencil-square fs-3 me-2"></i>
                    <h3 class="mb-0 fw-bold">Antrenörü Düzenle</h3>
                </div>
                <div class="card-body p-4 bg-light">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="text-center mb-4">
                            <img src="@(string.IsNullOrEmpty(Model.PhotoUrl) ? "https://cdn-icons-png.flaticon.com/512/8815/8815112.png" : Model.PhotoUrl)" 
                                 class="rounded-circle img-thumbnail shadow-sm" 
                                 style="width: 120px; height: 120px; object-fit: cover;">
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="FullName" class="form-control" placeholder="Ad Soyad" />
                            <label asp-for="FullName">Ad Soyad</label>
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Specialty" class="form-control" placeholder="Uzmanlık" />
                            <label asp-for="Specialty">Uzmanlık Alanı</label>
                            <span asp-validation-for="Specialty" class="text-danger small"></span>
                        </div>

                        <div class="row g-2 mb-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="WorkStartHour" class="form-control" type="number" min="0" max="23" placeholder="Başlangıç" />
                                    <label asp-for="WorkStartHour">Mesai Başlangıç (Saat)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="WorkEndHour" class="form-control" type="number" min="0" max="23" placeholder="Bitiş" />
                                    <label asp-for="WorkEndHour">Mesai Bitiş (Saat)</label>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Profil Fotoğrafı Güncelle</label>
                            <input type="file" name="imageFile" class="form-control" accept="image/*" />
                            <div class="form-text">Yeni bir fotoğraf yüklemezseniz eskisi kalır.</div>
                        </div>

                        <div class="card border-primary mb-4">
                            <div class="card-header bg-primary text-white fw-bold">
                                <i class="bi bi-card-checklist"></i> Verebildiği Hizmetler
                            </div>
                            <div class="card-body bg-white">
                                <div class="row">
                                    @if (ViewBag.Services != null)
                                    {
                                        foreach (var service in (List<FitnessApp.Web.Models.Service>)ViewBag.Services)
                                        {
                                            bool isChecked = Model.Services != null && Model.Services.Any(s => s.Id == service.Id);
                                            <div class="col-md-6 mb-2">
                                                <div class="form-check form-switch">
                                                    <input class="form-check-input" type="checkbox" name="selectedServices" value="@service.Id" id="srv_@service.Id" @(isChecked ? "checked" : "")>
                                                    <label class="form-check-label" for="srv_@service.Id">
                                                        @service.Name
                                                    </label>
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">İptal</a>
                            <button type="submit" class="btn btn-warning px-5 fw-bold text-dark">Güncelle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}