@model FitnessApp.Web.Models.Appointment

@{
    ViewData["Title"] = "Randevu Düzenle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0">✏️ Randevu Durumunu Değiştir</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="MemberId" />
                        <input type="hidden" asp-for="TrainerId" />
                        <input type="hidden" asp-for="ServiceId" />
                        <input type="hidden" asp-for="Date" /> 

                        <div class="mb-3">
                            <label class="fw-bold">Randevu Tarihi:</label>
                            <p class="form-control-plaintext">@Model.Date.ToString("dd.MM.yyyy HH:mm")</p>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Status" class="control-label fw-bold">Randevu Durumu</label>
                            <select asp-for="Status" class="form-select">
                                <option value="0">Bekliyor (Pending)</option>
                                <option value="1">Onaylandı (Confirmed)</option>
                                <option value="2">İptal (Cancelled)</option>
                                <option value="3">Tamamlandı (Completed)</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <input type="submit" value="Kaydet ve Güncelle" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}