@model IEnumerable<FitnessApp.Web.Models.Appointment>

@{
    ViewData["Title"] = "Randevular";
}

<div class="container mt-5">
    
    <div class="row align-items-center mb-4">
        <div class="col-md-5">
            <h2 class="text-primary fw-bold">ðŸ“… Randevu Listesi</h2>
        </div>
        
        <div class="col-md-7">
            <div class="d-flex justify-content-end gap-2">
                
                @if (User.IsInRole("Admin"))
                {
                    <form asp-action="Index" method="get" class="d-flex gap-2">
                        <div class="input-group">
                            <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Ãœye AdÄ± veya E-mail..." aria-label="Ãœye Ara">
                            <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i> Ara</button>
                        </div>
                        
                        @if (ViewData["CurrentFilter"] != null)
                        {
                            <a asp-action="Index" class="btn btn-secondary">Temizle</a>
                        }
                    </form>
                }

                <a asp-action="Create" class="btn btn-success text-nowrap">
                    <i class="bi bi-plus-circle"></i> + Yeni Randevu
                </a>
            </div>
        </div>
    </div>

    <div class="card shadow border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th class="py-3 ps-4">Tarih</th>
                            <th class="py-3">Ãœye</th>
                            <th class="py-3">AntrenÃ¶r</th>
                            <th class="py-3">Hizmet</th>
                            <th class="py-3">Durum</th>
                            <th class="py-3 text-end pe-4">Ä°ÅŸlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5 text-muted">
                                    <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                    HenÃ¼z kayÄ±tlÄ± randevu bulunmamaktadÄ±r.
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model) {
                                <tr>
                                    <td class="ps-4 fw-bold">@item.Date.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="ms-2">
                                                <div class="fw-bold">@item.Member?.FirstName @item.Member?.LastName</div>
                                                <div class="text-muted small">@item.Member?.Email</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@item.Trainer?.FullName</td>
                                    <td><span class="badge bg-info text-dark">@item.Service?.Name</span></td>
                                    <td>
                                        @if(item.Status.ToString() == "Pending") 
                                        { 
                                            <span class="badge bg-warning text-dark">Bekliyor</span> 
                                        }
                                        else if(item.Status.ToString() == "Confirmed") 
                                        { 
                                            <span class="badge bg-success">OnaylÄ±</span> 
                                        }
                                        else if(item.Status.ToString() == "Cancelled") 
                                        { 
                                            <span class="badge bg-danger">Ä°ptal</span> 
                                        }
                                        else 
                                        { 
                                            <span class="badge bg-secondary">TamamlandÄ±</span> 
                                        }
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Detay</a>

                                            @if (item.Status.ToString() == "Pending" && item.Date > DateTime.Now)
                                            {
                                                <a asp-action="Cancel" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Ä°ptal</a>
                                            }

                                            @if (User.IsInRole("Admin"))
                                            {
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning text-dark">DÃ¼zenle</a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-dark">Sil</a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>